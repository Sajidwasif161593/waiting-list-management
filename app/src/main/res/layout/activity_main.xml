<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity"
    android:background="@color/light_blue">

    <!-- Label for Course Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"/>

    <!-- Edit text to enter course name -->
    <EditText
        android:id="@+id/idEdtCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter course Name" />

    <!-- Label for Course Duration -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Duration"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"/>

    <!-- Edit text to enter course duration -->
    <EditText
        android:id="@+id/idEdtCourseDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course Duration" />

    <!-- Label for Course Tracks -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Tracks"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"/>

    <!-- Edit text to display course tracks -->
    <EditText
        android:id="@+id/idEdtCourseTracks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course Tracks" />

    <!-- Label for Course Description -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Description"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"/>

    <!-- Edit text for course description -->
    <EditText
        android:id="@+id/idEdtCourseDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Course Description" />

    <!-- Button for adding new course -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnAddCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Add Course"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/regular_btn"/>

    <!-- Button for viewing courses -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnViewCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="View Course"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/regular_btn"/>

    <!-- Button for adding students -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/idBtnAddStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Add Student"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/regular_btn"/>
</LinearLayout>
